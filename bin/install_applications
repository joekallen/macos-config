#! /usr/bin/env bash

# DESCRIPTION
# Installs applications.

# EXECUTION

# Alfred
install_dmg_app "$ALFRED_APP_URL" "$ALFRED_VOLUME_NAME" "$ALFRED_APP_NAME"

# Atom
install_zip_app "$ATOM_APP_URL" "$ATOM_APP_NAME"

# Docker
install_dmg_app "$DOCKER_APP_URL" "$DOCKER_VOLUME_NAME" "$DOCKER_APP_NAME"

# Insomnia
install_dmg_app "$INSOMNIA_APP_URL" "$INSOMNIA_VOLUME_NAME" "$INSOMNIA_APP_NAME"

# Kaleidoscope
install_dmg_app "$KALEIDOSCOPE_APP_URL" "$KALEIDOSCOPE_APP_NAME" "$KALEIDOSCOPE_VOLUME_NAME"

# NVM - Node version manager
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.11/install.sh

# One Password

# Postman
download_only "$POSTMAN_APP_URL" "$POSTMAN_FILE_NAME"